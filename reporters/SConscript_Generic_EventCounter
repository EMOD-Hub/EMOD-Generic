# -*- mode: python; -*-
# This Python script, SConscript, invoked by the SConscript in the upper directory,
#
import os, sys, shutil

Import('env')
report_env = env.Clone()
report_env[ "REPORT_DIR" ] = 'libreporteventcounter'

lib_report_dllSrcFiles = [ "$REPORT_DIR/ReportEventCounter.cpp" ]
if os.name != "posix":
    lib_report_dllSrcFiles.extend( [ "$REPORT_DIR/stdafx.cpp" ] )
lib_report_dllIncFiles = [ "$REPORT_DIR/ReportEventCounter.h" ]
lib_report_dllLocalInc = [ "$REPORT_DIR/stdafx.h" ]

obj_ber                = report_env.SharedObject( "grec_BaseEventReport",         "../baseReportLib/BaseEventReport.cpp" )
obj_cdm                = report_env.SharedObject( "grec_ChannelDataMap",          "../baseReportLib/ChannelDataMap.cpp" )


report_dir = report_env[ "BUILD_DIR" ] + 'reporter_plugins/' + report_env[ "REPORT_DIR" ]

lib_report_Dll = report_env.SharedLibrary( report_dir, lib_report_dllSrcFiles + obj_ber + obj_cdm)

# take lib_report.dll (exclude .lib, .exp) out to be the building target
# to match the number of building variant
lib_report_dllTarget = lib_report_Dll[0]
